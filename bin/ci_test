echo "Initialize directories"

nvm use stable

cd api_gateway
cp .env.sample .env
npm install
cd ..

cd crm_service
cp .env.sample .env
npm install
cd ..

cd vk_service
cp .env.sample .env
npm install
cd ..

cd web
npm install
cd ..




echo "run tests"

cd api_gateway
npm run tests
cd ..

cd crm_service
npm run tests
cd ..

cd vk_service
npm run tests
cd ..

cd web
CI=true npm test
cd ..
